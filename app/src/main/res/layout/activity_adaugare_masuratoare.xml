<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.stud.measureapp.AdaugareMasuratoareActivity">

<android.support.design.widget.TextInputLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:hint="Denumire Masuratoare"
    android:id="@+id/textInputLayout"

    app:layout_constraintBottom_toTopOf="parent"
    app:layout_constraintRight_toLeftOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintVertical_bias="0.0">

    <EditText
        android:layout_width="237dp"
        android:layout_height="wrap_content"
        android:hint="Denumire Masuratoare"
        android:id="@+id/denumireMasuratoare"/>

</android.support.design.widget.TextInputLayout>

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="START"
    android:id="@+id/btnStart"
    tools:layout_constraintTop_creator="1"
    tools:layout_constraintBottom_creator="1"
    android:layout_marginStart="16dp"
    app:layout_constraintBottom_toBottomOf="@+id/btnStop"
    tools:layout_constraintLeft_creator="1"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="@+id/btnStop"
    android:layout_marginLeft="16dp" />

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="STOP"
    android:id="@+id/btnStop"
    tools:layout_constraintTop_creator="1"
    tools:layout_constraintRight_creator="1"
    android:layout_marginEnd="16dp"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_marginTop="75dp"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginRight="16dp" />

</android.support.constraint.ConstraintLayout>
